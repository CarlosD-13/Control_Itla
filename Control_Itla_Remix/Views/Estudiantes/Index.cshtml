@model IEnumerable<Control_Itla_Remix.Models.Estudiante>

@{
    ViewData["Title"] = "Index";
}

<h2>Estudiante</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Matricula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edad)
            </th>
            <th>
                <a class="btn btn-success" asp-action="Create">Crear nuevo</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Matricula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edad)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.EstudianteID">Editar</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.EstudianteID">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
